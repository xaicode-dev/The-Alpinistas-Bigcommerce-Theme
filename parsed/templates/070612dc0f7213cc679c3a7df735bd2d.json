{"components/elevate/recent-updates":"{{#unless theme_settings.hide_recent}}\r\n<div class=\"recent-update\">\r\n    <div class=\"container\">\r\n        <div class=\"section-title\">\r\n            <h2 class=\"section-heading\"> \r\n                {{theme_settings.recent-title}}\r\n            </h2>\r\n            {{#if theme_settings.recent-sub}}\r\n                <p class=\"section-sub-heading\">\r\n                    {{theme_settings.recent-sub}}\r\n                </p>\r\n            {{/if}}\r\n        </div>\r\n        <div class=\"recent-update-element\">\r\n            <div class=\"recent-update-element-content {{#each blog.recent_posts}}{{#if thumbnail}}has-blog-image{{else}}no-blog-image{{/if}}{{/each}}\">\r\n                {{#each blog.recent_posts }}\r\n                 {{#lt @index 1}}\r\n                    <div class=\"recent-update-left show\">\r\n                        <div class=\"recent-update-details\">\r\n                            <h5 class=\"blog-title\">{{title}}</h5>\r\n                            <p class=\"blog-summary\">{{summary}}...</p> \r\n                            <a class=\"blog-read-more\" href=\"{{url}}\"><span>{{lang 'blog.read_more'}}</span></a>\r\n                        </div>\r\n                    </div>\r\n                    <div class=\"recent-update-right show\">\r\n                        {{#if author}}\r\n                        <p class=\"blog-author\">\r\n                            <span class=\"icon-profile show theme-icon\" data-icon=\"&#xe913;\"></span>\r\n                            <span class=\"show\">{{author}}</span>\r\n                        </p>\r\n                        {{/if}}\r\n                        <img \r\n\t\t\t\t\t\t\tclass=\"lazyload\" \r\n\t\t\t\t\t\t\tdata-sizes=\"auto\" \r\n\t\t\t\t\t\t\tsrc=\"data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==\" \r\n\t\t\t\t\t\t\tdata-src=\"{{getImage thumbnail}}\" \r\n\t\t\t\t\t\t\talt=\"{{thumbnail.alt}}\" \r\n\t\t\t\t\t\t\ttitle=\"{{thumbnail.alt}}\"\r\n\t\t\t\t\t\t/>\r\n\t\t\t\t\t\t\t\r\n                        {{#if date_published}} \r\n                        <p class=\"blog-date\">\r\n                            <span class=\"icon-calendar show theme-icon\" data-icon=\"&#xe901;\"></span>\r\n                            <span class=\"date-format show\">{{date_published}}</span>\r\n                        </p>\r\n                        {{/if}}\r\n                    </div>\r\n                   {{/lt}}\r\n                {{/each}} \r\n            </div>\r\n            <div class=\"recent-update-more\">\r\n                <a href=\"/blog\">{{lang 'home.custom_read'}}</a>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n{{/unless}}\r\n\r\n"}
